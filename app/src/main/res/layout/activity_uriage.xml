<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="soumu.seed.android41.UriageActivity">

<TextView
    android:layout_width="80dp"
    android:text="日付:"
    android:id="@+id/lblUriageHizuke"
    android:layout_row="0"
    android:layout_column="0" />

<DatePicker
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/edtUriageHizuke"
    android:layout_row="0"
    android:layout_column="1"
    android:calendarViewShown="false"/>

<TextView
    android:layout_width="80dp"
    android:text="担当CD:"
    android:id="@+id/lblEntryTantoCd"
    android:layout_row="1"
    android:layout_column="0"
    android:gravity="fill"/>

<TextView
    android:layout_width="80dp"
    android:text="伝票区分:"
    android:id="@+id/lblEntryDenk"
    android:layout_row="2"
    android:layout_column="0"
    android:gravity="fill"/>

<RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New RadioButton"
    android:id="@+id/radioButton"
    android:layout_row="2"
    android:layout_column="1" />

<RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New RadioButton"
    android:id="@+id/radioButton2"
    android:layout_row="3"
    android:layout_column="1" />

<TextView
    android:layout_width="80dp"
    android:text="商品CD:"
    android:id="@+id/lblEntryShohinCd"
    android:layout_row="4"
    android:layout_column="0"
    android:gravity="fill"/>

<EditText
    android:layout_width="match_parent"
    android:id="@+id/edtEntryShohinCd"
    android:layout_row="4"
    android:layout_column="1"
    android:gravity="fill"/>

<TextView
    android:text="商品名"
    android:id="@+id/txtEntryShohinMei"
    android:layout_row="5"
    android:layout_column="0"
    android:gravity="fill"/>

<EditText
    android:layout_width="match_parent"
    android:id="@+id/edtEntryShohinMei"
    android:layout_row="5"
    android:layout_column="1"
    android:gravity="fill"/>


</GridLayout>
